---
const siteUrl = Astro.site || 'https://your-domain.vercel.app';
const siteName = 'AIU Cedar Society';

// Organization Schema
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": siteName,
  "url": siteUrl,
  "logo": `${siteUrl}/logo.png`,
  "description": "秋田とAIU生の可能性をつなぐ学生主導の公認団体",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "秋田市",
    "addressRegion": "秋田県",
    "addressCountry": "JP"
  },
  "foundingDate": "2024-06",
  "sameAs": []
};
---

<script type="application/ld+json" is:inline set:html={JSON.stringify(organizationSchema)} />
