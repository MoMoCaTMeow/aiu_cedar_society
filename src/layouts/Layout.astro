---
import "../styles/global.css";
import SEO from "../components/SEO.astro";
import SchemaOrganization from "../components/SchemaOrganization.astro";

interface Props {
  seo?: {
    title?: string;
    description?: string;
    keywords?: string;
    ogImage?: string;
    ogType?: 'website' | 'article';
    article?: {
      publishedTime?: string;
      author?: string;
    };
  };
}

const { seo = {} } = Astro.props;
---

