---
import Layout from '../../layouts/Layout.astro';
import { getMembers } from '../../library/microcms';

// Fetch members
const response = await getMembers();
const members = response.contents;

// SEO
const seo = {
  title: 'メンバー紹介 | AIU Cedar Society',
  description: 'AIU Cedar Societyを支えるメンバーたちを紹介します。代表をはじめ、企画・運営・広報など様々な役割でメンバーが活動しています。',
  keywords: 'AIU Cedar Society,メンバー,代表,運営メンバー,学生',
};
---

<Layout seo={seo}>
  <div class="bg-gradient-to-b from-gray-50 to-white min-h-screen">
    <div class="container mx-auto px-4 md:px-6 pt-16 md:pt-20 pb-12 md:pb-20 max-w-5xl">
        {/* Back Button */}
        <a href="/" class="inline-flex items-center text-gray-500 hover:text-[#006837] mb-8 md:mb-12 transition-colors group text-sm font-medium min-h-[44px]">
            <svg class="w-4 h-4 mr-2 transform group-hover:-translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
            トップに戻る
        </a>

        {/* Hero Section */}
        <div class="relative mb-12 md:mb-16">
            <div class="absolute top-0 left-0 w-px h-16 bg-[#006837]"></div>
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6 tracking-tight leading-tight pl-6">
                メンバー<span class="text-[#006837]">紹介</span>
            </h1>
            <p class="text-lg md:text-xl text-gray-600 leading-relaxed pl-6 max-w-2xl">
                AIU Cedar Societyを支えるメンバーたち
            </p>
        </div>

        {/* Core Team Section */}
        <div class="bg-white rounded-lg shadow-md p-8 md:p-10 mb-8">
            <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-8 tracking-tight">コアメンバー</h2>
            
            <div class="grid md:grid-cols-2 gap-6">
                {members.map((member) => (
                    <div class="bg-gray-50 rounded-lg p-6 border-l-4 border-[#006837]">
                        <div class="flex items-start gap-4">
                            {member.image ? (
                                <img src={member.image.url} alt={member.name} class="w-16 h-16 rounded-full object-cover shadow-md flex-shrink-0" />
                            ) : (
                                <div class="w-16 h-16 bg-gradient-to-br from-[#006837] to-[#005028] rounded-full flex items-center justify-center flex-shrink-0 shadow-md">
                                    <span class="text-white text-xl font-bold">{member.name.substring(0, 2)}</span>
                                </div>
                            )}
                            <div class="flex-1">
                                <h3 class="text-lg font-bold text-gray-900 mb-1">{member.name}</h3>
                                <p class="text-sm text-[#006837] font-medium mb-2">{member.position} / {member.year}</p>
                                <p class="text-sm text-gray-600">
                                    {member.description}
                                </p>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </div>

        {/* Join Us Card */}
        <div class="bg-gradient-to-br from-[#006837] to-[#005028] text-white rounded-lg p-8 md:p-10 shadow-lg">
            <div class="flex items-start gap-4 mb-6">
                <div class="w-12 h-12 bg-white bg-opacity-20 rounded-lg flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                    </svg>
                </div>
                <div>
                    <h2 class="text-2xl font-bold mb-4">メンバー募集中</h2>
                    <p class="text-white opacity-90 mb-6 leading-relaxed">
                        AIU Cedar Societyでは、一緒に活動を盛り上げてくれる仲間を募集しています。<br/>
                        企画・運営・広報など、様々な役割でメンバーを募集中です。興味のある方は、お気軽にお問い合わせください。
                    </p>
                    <a href="/contact" class="inline-flex items-center gap-2 bg-white text-[#006837] font-bold px-6 py-3 rounded-lg hover:shadow-lg transition-all">
                        <span>お問い合わせ</span>
                        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </div>
  </div>
</Layout>
