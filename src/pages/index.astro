                        <span class="counter" data-target="10">0</span>
                        <span class="text-[#006837]">+</span>
                    </div>
                    <p class="text-sm md:text-base text-gray-600 mt-2 font-medium">協力企業</p>
                </div>
                
                {/* Years Active */}
